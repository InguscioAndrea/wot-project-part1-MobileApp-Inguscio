<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_back_9"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginTop="95dp"
        android:text="Back"
        android:textSize="16sp"
        app:icon="@drawable/ic_icons8_ritorno_64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_read_training_exercises" />

    <TextView
        android:id="@+id/id_txtNew_dieta"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:drawableLeft="@drawable/ic_icon_new"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/btn_read_diet"
        app:layout_constraintTop_toBottomOf="@+id/txt_prescription_title" />

    <TextView
        android:id="@+id/id_txtNew_farmaci"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_icon_new"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/btn_read_medical_prescription"
        app:layout_constraintTop_toBottomOf="@+id/id_txtNew_dieta" />

    <TextView
        android:id="@+id/id_txtNew_scheda_allenamento"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_icon_new"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/btn_read_training_exercises"
        app:layout_constraintTop_toBottomOf="@+id/id_txtNew_farmaci" />

    <Button
        android:id="@+id/btn_read_diet"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="Diet prescription"
        android:textSize="16sp"
        app:icon="@drawable/ic_icons_diet"
        app:layout_constraintEnd_toStartOf="@+id/id_txtNew_dieta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_prescription_title" />

    <Button
        android:id="@+id/btn_read_medical_prescription"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Medical Prescription"
        android:textSize="16sp"
        app:icon="@drawable/ic_pillole"
        app:layout_constraintEnd_toStartOf="@+id/id_txtNew_farmaci"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_read_diet" />

    <Button
        android:id="@+id/btn_read_training_exercises"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="training exercises prescription "
        android:textSize="16sp"
        app:icon="@drawable/icon_fitness_exercises"
        app:layout_constraintEnd_toStartOf="@+id/id_txtNew_scheda_allenamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_read_medical_prescription" />

    <TextView
        android:id="@+id/txt_prescription_title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:text="Choose the prescription you want to read"
        android:textAlignment="center"
        android:textColor="#004d40"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>