<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="100"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:layout_marginBottom="20dp"
            android:text="@string/Administrator_Page"
            android:textAlignment="center"
            android:textColor="#004D40"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            />

        <Button
            android:id="@+id/btn_logout_Admin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            app:icon="@drawable/ic_icons8_exit_60"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ViewUsers"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:text="List of users"
            android:background="@drawable/style_button"
            app:icon="@drawable/icona_list_user__foreground"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_NewUsers"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="68dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:text="Create new user"
            android:background="@drawable/style_button"
            app:icon="@drawable/icona_create_user_foreground"
            android:textSize="16sp"
             />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>