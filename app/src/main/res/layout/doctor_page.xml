<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/id_previous_data_Doctor"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="80"
            android:layout_marginBottom="20dp"
            android:text="Loading..."
            android:textAlignment="center"
            android:textColor="#004D40"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_logout_Doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            app:icon="@drawable/ic_icons8_exit_60"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_2"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:id="@+id/btn_ViewPreviousData_Doctor"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="125dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="previous data"
        android:textSize="16sp"
        app:icon="@drawable/ic_icons8_event_64"
        android:background="@drawable/style_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_AnalyticsData"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/style_button"
            android:text="Data trend Analytics"
            android:textSize="16sp"
            app:icon="@drawable/ic_icons8_analytics_64" />

    <Button
        android:id="@+id/btn_UploadFile_Doctor"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="40dp"
        android:text="Upload File"
        android:textSize="16sp"
        app:icon="@drawable/ic_icons_pdf"
        app:iconPadding="8dp"
        android:background="@drawable/style_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ViewPreviousData_Doctor"
        tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_ViewUsers"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:text="List of users"
            android:background="@drawable/style_button"
            app:icon="@drawable/icona_list_user__foreground"
            android:paddingLeft="0dp"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>